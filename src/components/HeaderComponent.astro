---
const NavLinks = {
    '🏠 首页' : '/',
    '🥰 友链' : '/link/',
    '✍️ 留言' : '/ly/',
    '😎 关于' : '/about/',
}
---

<header class="bg-white/30 backdrop-blur border-b text-neutral-800">
    <div class="container mx-auto px-6 py-2.5">
        <div class="flex items-center justify-between gap-5">
            <a href="/" class="font-bold flex-nowrap shrink-0">🥬 SiteName</a>
            <div class="flex items-center">
                <nav class="mx-5 inline-flex space-x-2 overflow-hidden flex-nowrap max-w-full overflow-x-scroll text-xs *:shrink-0 *:px-1.5 *:py-1 *:rounded hover:*:bg-slate-100 active:*:bg-slate-200 *:transition *:ease-in-out active:*:scale-95">
                    {Object.entries(NavLinks).map(([name, url]) => (
                        <a href={url}>{name}</a>
                    ))}
                </nav>
                <button id="search_btn_open" class="p-1.5 rounded-lg hover:bg-slate-100 active:bg-slate-200 active:transition active:scale-90">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="size-4">
                        <path fill-rule="evenodd" d="M9.965 11.026a5 5 0 1 1 1.06-1.06l2.755 2.754a.75.75 0 1 1-1.06 1.06l-2.755-2.754ZM10.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z" clip-rule="evenodd" />
                    </svg>
                </button>
                <button id="search_btn_close" class="p-1.5 rounded-lg hover:bg-slate-100 active:bg-slate-200 active:transition active:scale-90 hidden">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="size-4">
                        <path d="M5.28 4.22a.75.75 0 0 0-1.06 1.06L6.94 8l-2.72 2.72a.75.75 0 1 0 1.06 1.06L8 9.06l2.72 2.72a.75.75 0 1 0 1.06-1.06L9.06 8l2.72-2.72a.75.75 0 0 0-1.06-1.06L8 6.94 5.28 4.22Z" />
                    </svg>                       
                </button>
            </div>
        </div>
    </div>
</header>

<div id="search_box" class="fixed w-full h-screen z-[997] bg-white/30 backdrop-blur hidden">
    <div class="container mx-auto px-6">
        <form class="flex items-center max-w-lg mx-auto mt-5">   
            <label for="voice-search" class="sr-only">Search</label>
            <div class="relative w-full">
                <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z" />
                      </svg>
                </div>
                <input type="text" id="voice-search" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full ps-10 px-2.5 py-2" placeholder="搜索关键词..." required />
            </div>
            <button type="submit" class="inline-flex shrink-0 items-center py-2 px-3 ms-2 text-sm font-medium text-white bg-neutral-800 rounded-lg hover:bg-neutral-600 focus:ring-2 focus:outline-none focus:ring-neutral-400">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="size-4 me-1.5">
                    <path fill-rule="evenodd" d="M9.965 11.026a5 5 0 1 1 1.06-1.06l2.755 2.754a.75.75 0 1 1-1.06 1.06l-2.755-2.754ZM10.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z" clip-rule="evenodd" />
                </svg>搜索
            </button>
        </form>
    </div>
</div>

<script>
    document.getElementById("search_btn_open").addEventListener("click", function(){
        document.getElementById("search_box").classList.remove("hidden");
        document.getElementById("search_btn_close").classList.remove("hidden");
        document.getElementById("search_btn_open").classList.add("hidden");
    });
    document.getElementById("search_btn_close").addEventListener("click", function(){
        document.getElementById("search_box").classList.add("hidden");
        document.getElementById("search_btn_open").classList.remove("hidden");
        document.getElementById("search_btn_close").classList.add("hidden");
    });
</script>

