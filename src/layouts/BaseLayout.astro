---
import config from "../config.mjs"

const { title } = Astro.props;
---

<!-- 

body-bg  -999

loading   999

header    998

search    997

top btn   996


-->

<html lang="zh" class="">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
		<meta name="generator" content={Astro.generator} />
		<title>{title && title+" - "}{config.title}</title>
	</head>
	<body ontouchstart="ontouchstart" class="min-h-screen text-[#555] bg-[#eef5fc] dark:text-[#bbb] dark:bg-[#0d1117] font-sans">
        <slot />
	</body>
</html>

<style is:global>
	::-webkit-scrollbar {
		display: none;
	}

	body:before {
		z-index: -999;
		content: "";
		position: fixed;
		inset: 0;
		background: linear-gradient(90deg, var(--dot-bg-color) 22px, transparent 1%) 50%, linear-gradient(var(--dot-bg-color) 22px, transparent 1%) 50%, var(--dot-color);
		background-position: center center;
		background-size: 24px 24px;
		/* mask-image: linear-gradient(0deg, transparent 5%, var(--dot-mask-color)); */
	}
	html.dark {
		--dot-bg-color: #0d1117;
		--dot-color: #2f353c;
		--dot-mask-color: #000000;
	}
	html:not(.dark) {
		--dot-bg-color: #ffffff;
		--dot-color: #a5aeb850;
		--dot-mask-color: #ffffff;
	}
</style>




